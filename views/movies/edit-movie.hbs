<h2>Update Movie</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
    <input type="text" value="{{movie.title}}" name="title" placeholder="">
    <input type="text" value="{{movie.genre}}" name="genre" placeholder="">
    <input type="text" value="{{movie.plot}}" name="plot" placeholder="">
    <select name="cast" id="cast" multiple>
    {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
    </select>
    <button type="submit">Update</button>
</form>