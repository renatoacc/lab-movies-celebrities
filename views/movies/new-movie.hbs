<h2>New Movie</h2>
<form action="/movies/create" method="POST">
    <input type="text" value="" name="title" placeholder="Movie Title">
    <input type="text" value="" name="genre" placeholder="Movie Genre">
    <input type="text" value="" name="plot" placeholder="Movie Plot">
    <select name="cast" id="cast" multiple>
    {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
    </select>
    <button type="submit">Save</button>
</form>